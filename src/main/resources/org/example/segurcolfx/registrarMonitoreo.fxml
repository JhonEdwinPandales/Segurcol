<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.segurcolfx.viewController.RegistrarServiciosController"
      spacing="12" alignment="TOP_CENTER" padding="20">

    <Label text="Registrar Monitoreo Remoto" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <VBox spacing="6" alignment="CENTER_LEFT">
        <Label text="Código de contrato:" />
        <TextField fx:id="txtCodigoContrato" />

        <Label text="Cliente:" />
        <TextField fx:id="txtCliente" />

        <Label text="Tarifa mensual:" />
        <TextField fx:id="txtTarifa" />

        <Label text="Número de dispositivos vigilados:" />
        <TextField fx:id="txtDispositivos" />
    </VBox>

    <Button text="Registrar Servicio" fx:id="btnRegistrar" />
    <Button text="Volver" fx:id="btnVolver" />
</VBox>
